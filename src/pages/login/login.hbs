---
styles: './login.scss'
btn-text: 'Sign in'
---

{{#extend "main"}}
    {{#content "main"}}
        <div class="login">
            <div class="container container--auth">
                <div class="login-form">
                    <h1 class="login-form__title">Sign in</h1>

                    <form class="login-form__items">
                        <div class="login-form__items-wrapper">
                            <div class="form-control">
                                <input type="text" class="login__form-items-input" placeholder="Email" >
                            </div>

                            <div class="form-control">
                                <input type="password" class="form-input login__form-items-input" placeholder="Password" >
                            </div>
                        </div>


                        {{> button btn-text="Sign in" }}
                    </form>

                    <div class="login-form__items-text">
                        Not registered? You can <a class="link">sign up</a>
                    </div>
                </div
            </div>
        </div>
    {{/content}}
{{/extend}}