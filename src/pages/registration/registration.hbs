---
styles: './registration.scss'
btn-text: 'Sign up'
---

{{#extend "main"}}
    {{#content "main"}}
        <div class="registration">
            <div class="container container--auth">
                <div class="registration-form">
                    <h1 class="registration-form__title">Sign up</h1>

                    <form class="registration-form__items">
                        <div class="registration-form__items-wrapper">
                            <div class="form-control">
                                <input type="text" class="registration__form-items-input" placeholder="Firstname" >
                            </div>
                            <div class="form-control">
                                <input type="text" class="form-control registration__form-items-input" placeholder="Lastname" >
                            </div>
                            <div class="form-control">
                                <input type="text" class="form-control registration__form-items-input" placeholder="Login" >
                            </div>
                            <div class="form-control">
                                <input type="text" class="form-control registration__form-items-input" placeholder="Email" >
                            </div>
                            <div class="form-control">
                                <input type="password" class="form-control registration__form-items-input" placeholder="Password" >
                            </div>
                        </div>

                        {{> button }}
                    </form>

                    <div class="registration-form__items-text">
                        You have an account? You can <a class="link">sign in</a>
                    </div>
                </div
            </div>
        </div>
    {{/content}}
{{/extend}}
